<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NutriAI - Tu nutricionista virtual</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2e7d32;
            --secondary-color: #4caf50;
            --light-green: #e8f5e9;
            --dark-green: #1b5e20;
            --user-msg: #e3f2fd;
            --ai-msg: #f1f8e9;

        }

        body {
            background-color: #f5f5f5;
            height: 100vh;
            overflow: hidden;
      
        }

        .chat-container {
            display: flex;
            height: 100vh;
            width : 100%;
            margin: 0 auto;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .sidebar {
            width: 320px;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .chat-history {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            max-width 400px;
        }

        .history-item {
            padding: 12px;
            margin-bottom: 10px;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .history-item:hover {
                background-color: rgba(255, 255, 255, 0.2);
            }

        .chat-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center; 
            background-color: #f2f4f7;
            height: 100vh; 
        }

        .chat-main_in {
            width: 50%;
            height: 100%;
            display: flex;
            flex-direction: column;
          
        }

        .chat-header {
            padding: 15px 20px;
            border-bottom: 1px solid #e0e0e0;
            background-color: var(--light-green);
        }

        .chat-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #f2f4f7;
        }

        .message {
            max-width: 80%;
            margin-bottom: 15px;
            padding: 12px 16px;
            border-radius: 18px;
            position: relative;
        }

        .user-message {
            background-color: var(--user-msg);
            margin-left: auto;
            border-bottom-right-radius: 5px;
        }

        .ai-message {
            background-color: var(--ai-msg);
            margin-right: auto;
            border-bottom-left-radius: 5px;
        }

        .chat-input {
            padding: 15px 20px;
            border-top: 1px solid #e0e0e0;
            border-radius: 30px;
            margin-bottom:40px;

        }

        .message-input {
            border-radius: 24px;
            padding: 12px 20px;
            resize: none;
        }

        .send-button {
            background-color: var(--primary-color);
            border: none;
            color: white;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .send-button:hover {
                background-color: var(--dark-green);
            }

        .logo {
            padding: 20px 15px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .new-chat-btn {
            margin: 15px;
            background-color: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            padding: 10px;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .new-chat-btn:hover {
                background-color: rgba(255, 255, 255, 0.3);
            }

        .timestamp {
            font-size: 0.7rem;
            color: #757575;
            text-align: right;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    @RenderBody()

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>